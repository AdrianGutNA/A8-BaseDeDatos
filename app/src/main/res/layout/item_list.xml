<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardBackgroundColor="#A0F59D"
        app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/idDato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="180dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Alumno"
                android:textColor="#DDA600"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:text="Matricula:" />

        <TextView
            android:id="@+id/txtvMatricula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:textColor="#000000"
            android:text="56201000106" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="160dp"
            android:textColor="#000000"
            android:text="Nombre del alumno:" />
        <TextView
            android:id="@+id/txtvNombreCompleto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="160dp"
            android:textColor="#000000"
            android:text="Adrián Gutiérrez Nava" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="40dp"
            android:textColor="#000000"
            android:text="Sexo:" />
        <TextView
            android:id="@+id/txtvSexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:text="Hombre" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="160dp"
            android:textColor="#000000"
            android:text="Fecha de Nacimiento:" />
        <TextView
            android:id="@+id/txtvFechaNacimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="160dp"
            android:textColor="#000000"
            android:text="08-07-1997" />

            <ImageView
                android:id="@+id/imgView"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="140dp"
                android:layout_marginBottom="20dp"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:src="@drawable/usuario"
                />

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="150dp"
            android:text="Editar" />
        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="140dp"
            android:ems="7"
            android:text="Eliminar" />


    </androidx.cardview.widget.CardView>
</LinearLayout>